/**index.wxss**/
.banner {
  height: 417rpx;
}

.banner image {
  width: 100%;
  height: 417rpx;
}
.category{
  display: flex;
  flex-flow: row wrap;
  align-content: flex-start;
  background: #fff;
  border-bottom: 1rpx solid #e5e5e5;
  padding: 15rpx 10rpx 10rpx;
  min-height: 175rpx;
  overflow: hidden;
}
.category-item{
  display: flex;
  flex-flow: column wrap;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  width: 20%;
  height: 170rpx;
}
.icon{
  display: block;
  width: 85rpx;
  height: 85rpx;
  margin: 15rpx auto;
}
.icon-title{
	color: #454545;
  font-size: 30rpx;
}
.special{
	padding: 20rpx;
}
.special-title{
	width: 100%;
	display: flex;
	flex-flow: row nowrap;
	justify-content: center;
	align-items: center;
  margin-bottom: 20rpx;
}
.special-item{
	display: flex;
	flex-flow: row nowrap;
	justify-content: space-between;
	align-items: center;
	height: 200rpx;
  border-bottom: 2rpx #dadada solid;
	box-sizing: border-box;
}
.special-left{
	padding-left: 20rpx;
}
.special-img{
	width: 158rpx;
	height: 158rpx
}
.special-right{
	display: flex;
	flex-flow: column nowrap;
	justify-content: space-between;
	height: 100%;
	width: 55%;
	padding: 20rpx;
  box-sizing: border-box;
}
.special-price{
  display: flex;
	flex-flow: row nowrap;
	justify-content: flex-start;
  align-items: baseline
}
.sell-price{
  color: #f00;
  font-size: 28rpx
}
.origin-price{
  color: #8a8a8a;
  font-size: 24rpx;
  text-decoration: line-through
}