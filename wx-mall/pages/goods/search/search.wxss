/* pages/goods/search/search.wxss */
.search-box{
  padding: 30rpx;
  box-sizing: border-box;
  background: #fff;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  width: 100%
}
.search{
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  padding: 10rpx;
  background: #f7f7f7;
  box-sizing: border-box;
  width: 85%
}
.search-img{
  height: 40rpx;
  width: 40rpx
}
.search-text{
  color: #8a8a8a;
  font-size: 32rpx;
  margin-left: 10rpx
}
.search-btn{
  color: #108ee9;
  font-size: 32rpx;
  margin-left: 10rpx
}
.content{
  width: 100%
}
.replace-text{
  color: #108ee9;
  display: inline
}
/**类目为空页面*/
.empty{
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  width: 100%;
  margin-top: 50rpx
}
.nothing-img{
  width: 388rpx;
  height: 388rpx
}
.nothing-text{
  padding-top: 30rpx
}
.goods{
  background: #fff;
  width: 100%
}
.goods-list{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  padding: 10rpx;
  height: 200rpx;
  position: relative
}
.goods-img{
  width: 220rpx;
  height: 180rpx;
  padding: 10rpx
}
.mask{
  background: rgba(204, 204, 204, 0.575);
  z-index: 999;
  width:100%;
  height: 200rpx;
  position: absolute;
}
.amount-over{
  height: 150rpx;
  width: 150rpx;
  padding : 10rpx 0 0 20rpx
}
.goods-details{
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-around;
  width: 100%;
  padding: 5rpx 0 5rpx 20rpx;
}
.goods-name{
  font-size: 12px
}
.goods-limit{
  color: #ff9900;
  font-size: 28rpx;
}
.goods-des{
  color: #676767;
  font-size: 10px
}
.price{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
}
.select{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
}
.goods-amount{
  padding: 5rpx
}
.price-text{
  color: #ff0000;
  font-size: 12px
}
.add-img{
  width: 50rpx;
  height: 50rpx
}