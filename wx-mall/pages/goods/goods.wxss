/*购物车*/
.cart{
  position: fixed;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  bottom: 0;
  background: #676767;
  width: 100%;
  height: 120rpx;
  color: #fff
}
.cart-img-box{
  position: absolute;
  left: 30rpx;
  top: -30rpx;
  border: 5rpx solid #333;
  border-radius: 50%;
  background: #108fe99a;
  padding: 10rpx
}
.cart-img{
  width: 88rpx;
  height: 88rpx
}

.count{
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background: #108ee9;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  right: -10rpx;
  top: -10rpx
}
.pay{
  width: 25%;
  height: 100%;
  background: #108ee9;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
}

